{
  "strict" : true,    // strict modeを強制
  "indent" : 2,       // インデントの深さ
  "maxlen" : 80,      // 一行の最大長
  "unused" : true,    // 使用していない変数を警告 
  "undef"  : true,    // 宣言していない変数の使用禁止

  // グローバル変の環境数
  "browser" : true,   // ブラウザ用のグローバル変数環境
  "devel"   : true,   // consoleやalert等のデバッグ用グローバル変数
  "jquery"  : true,   // JQuery 用グローバル変数
  "node"    : true,   // Node.js 用グローバル変数
  "dojo"    : true,   // dojo tool kit用
  "globals": {
    "$": false,
    "_": false,
    "angular": true
  },

  // Relaxing Options - 危険性を認識した上で設定すること
//  "eqnull" : true,    // == null を許可
//  "expr" : true       // x || (x = 1); とかができるようにする
  "debug"   : true      // debugger を許可
}

